{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/build",
  "installCommand": "npm install --prefix backend-nodejs && npm install --prefix frontend",
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api" },
    { "source": "/health", "destination": "/api" },
    { "source": "/uploads/:path*", "destination": "/api" },
    { "source": "/((?!api|health|uploads|_next|static).*)", "destination": "/index.html" }
  ]
}