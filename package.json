{
  "name": "upe-program",
  "version": "1.0.0",
  "description": "UPE Program - Frontend and Backend",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:full": "./start-dev.sh",
    "start:backend": "cd backend-nodejs && npm start",
    "start:frontend": "cd frontend && npm start",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend-nodejs && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd backend-nodejs && npm install && cd ../frontend && npm install && cd ../docs && npm install",
    "build": "cd frontend && npm run build",
    "build:backend": "cd backend-nodejs && npm install",
    "build:frontend": "cd frontend && npm install && npm run build",
    "populate:db": "cd backend-nodejs && node populate_nodejs.js",
    "test": "concurrently \"npm run test:backend\" \"npm run test:frontend\"",
    "test:backend": "cd backend-nodejs && npm test",
    "test:frontend": "cd frontend && npm test",
    "db:migrate": "cd backend-nodejs && npx prisma migrate dev",
    "db:studio": "cd backend-nodejs && npx prisma studio",
    "db:generate": "cd backend-nodejs && npx prisma generate",
    "docs:storybook": "cd frontend && npm run storybook",
    "docs:styleguide": "cd frontend && npm run styleguide",
    "docs:docusaurus": "cd docs && npm start",
    "docs:build": "npm run docs:build:storybook && npm run docs:build:styleguide && npm run docs:build:docusaurus",
    "docs:build:storybook": "cd frontend && npm run build-storybook",
    "docs:build:styleguide": "cd frontend && npm run styleguide:build",
    "docs:build:docusaurus": "cd docs && npm run build",
    "docs:dev": "concurrently \"npm run docs:storybook\" \"npm run docs:styleguide\" \"npm run docs:docusaurus\"",
    "docs:serve": "concurrently \"npm run docs:serve:storybook\" \"npm run docs:serve:docusaurus\"",
    "docs:serve:storybook": "cd frontend && npx http-server storybook-static -p 6006",
    "docs:serve:docusaurus": "cd docs && npm run serve"
  },
  "workspaces": [
    "frontend",
    "backend-nodejs"
  ],
  "devDependencies": {
    "concurrently": "^9.2.1",
    "html-webpack-plugin": "^5.6.4"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.76.1"
  }
}
